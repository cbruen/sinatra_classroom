<h2>Create a New Question</h2>
<form method="POST" action="/questions">
	<p>Name: <input type="text" name="name" id="name"></p>
	</br>
	<p>Question: <textarea name="description" id="description" rows="3" cols="50"></textarea></p>
	</br>
	<p>Answer: <textarea name="answer" id="answer" rows="3" cols="50"></textarea></p>
	<input type="submit" value="submit">
</form>